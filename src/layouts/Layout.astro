---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sitio web de la boda de Carli Galarza y Leo Aguirre." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://unpkg.com/scrollreveal"></script>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;
	}

	@font-face {
		font-family: 'LucyRose';
  		src: url('/fonts/lucyrosepersonal-regular-webfont.woff') format('woff');
  		font-weight: normal;
  		font-style: normal;
  		font-display: swap;
	}

	@font-face {
		font-family: 'BritishCastilla';
  		src: url('/fonts/british_castilla-webfont.woff') format('woff');
		font-weight: normal;
  		font-style: normal;
		  font-display: swap;
	}

	html {
		font-family: 'LucyRose';
		font-size: 4.5vw;
	}

	body {
		background: #fff;
		color: #000;
		text-align: center;
	}

	span {
		font-family: 'BritishCastilla';
	}
</style>

<script>
	import ScrollReveal from 'scrollreveal';
	
	// Configurar la instancia de ScrollReveal
	const sr = ScrollReveal();
	sr.reveal('.scroll-reveal', {
  		delay: 200, // Retardo antes de la aparición del elemento (en milisegundos)
  		distance: '50px', // Distancia de desplazamiento del elemento
  		duration: 1000, // Duración de la animación (en milisegundos)
  		easing: 'ease-in-out', // Función de aceleración de la animación
	});
</script>
