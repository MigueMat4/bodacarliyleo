---
import Header from "../components/Header.astro"
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sitio web de la boda de Carli Galarza y Leo Aguirre." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;
	}

	html {
		font-family: system-ui, sans-serif;
	}

	body {
		background: #fff;
		color: #000;
	}
</style>
